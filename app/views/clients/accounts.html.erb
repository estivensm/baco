<%= render "submenu" %>
<div class="center_content">
  <div id="right_wrap">
    <div id="right_content">
      <h2>Listas de Cuentas Bancarias de <%= @client.full_name %></h2>
      <table id="rounded-corner">
        <thead>
          <th>Id</th>
          <th>Cliente</th>
          <th>Balance</th>
          <th>Currency</th>
          <th>Tipo</th>
        </thead>
        <tbody>
          <%= render partial: "bank_accounts/bank_account", collection: @accounts, as: :account %>
        </tbody>
      </table>
      <h2>Grafica de Transacciones</h2>
      <div id="graph-container" data-graph-series=<%= @client.transactions_graph_series %>></div>
  </div>
  </div>
  <div class="sidebar" id="sidebar">
    <h2>Clientes</h2>
    <div class="sidebar_section_text">
      En esta area puedes ver las cuentas bancarias del cliente seleccionado.
    </div>
    <h2>Acciones</h2>
    <ul>
      <li><%= link_to "Regresar", @client %></li>
    </ul>
  </div>
</div>
