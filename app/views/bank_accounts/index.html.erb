<h1>Cuentas Bancarias</h1>
<% if @accounts.any? %>
  <h2>Listado</h2>
  <table border="1">
    <tr>
      <th>Id</th>
      <th>Cliente</th>
      <th>Balance</th>
      <th>Currency</th>
    </tr>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.id, account %></td>
        <td><%= account.client.name %></td>
        <td><%= account.balance %></td>
        <td><%= account.currency %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <em>No hay ninguna cuenta creada</em>
<% end %>
<p>
<%= link_to "Nueva Cuenta Bancaria", new_bank_account_path %>
</p>
